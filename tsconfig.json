{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "sourceMap": true,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "outDir": "build",
        "lib": ["es5", "es6", "dom", "scripthost", "es2016", "es2017"]
    },
    "include": [
        "source/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.nospec.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": false
}